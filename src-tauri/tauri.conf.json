{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "project-chroma",
    "version": "0.1.0",
    "identifier": "com.d3w10.project-chroma",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Project Chroma [BETA]",
                "width": 1280,
                "height": 800,
                "minWidth": 1000,
                "minHeight": 600,
                "titleBarStyle": "Overlay",
                "resizable": true,
                "fullscreen": false,
                "hiddenTitle": true,
                "decorations": true,
                "zoomHotkeysEnabled": false,
                "trafficLightPosition": {
                    "x": 18.0,
                    "y": 25.0
                }
            }
        ],
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "**"
                ]
            },
            "csp": {
                "default-src": "'self'"
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/64x64.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}